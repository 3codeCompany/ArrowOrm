{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["encoding", "objects"],
    "additionalProperties": false,
    "properties": {
        "encoding": {
            "type": "string",
            "description": "Db tables/fields encoding",
            "default": "utf8_unicode_ci"
        },
        "objects": {
            "type": "object",
            "description": "List of schema objects",
            "additionalProperties": {
                "type": "object",
                "oneOf": [
                    {
                        "required": ["table", "fields"]
                    },
                    {
                        "required": ["extensionTo"]
                    }
                ],
                "additionalProperties": false,
                "properties": {
                    "table": {
                        "type": "string"
                    },
                    "extensionTo": {
                        "type": "string"
                    },
                    "fields": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "required": ["type"],
                            "additionalProperties": false,
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": ["int", "varchar", "text", "date", "datetime"]
                                },
                                "primaryKey": {
                                    "type": "boolean"
                                },
                                "autoincrement": {
                                    "type": "boolean"
                                },
                                "default": {
                                    "type": "string"
                                },
                                "size": {
                                    "type": "integer"
                                },
                                "required": {
                                    "type": "boolean"
                                },
                                "meta": {
                                    "type": "object",
                                    "additionalProperties": false,

                                    "properties": {
                                        "label": {
                                            "type": "string"
                                        },
                                        "options": {
                                            "type": "object",
                                            "additionalProperties": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "connections": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "required": ["useDBFKeys", "path"],
                            "additionalProperties": false,
                            "properties": {
                                "useDBFKeys": {
                                    "type": "boolean"
                                },
                                "path": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "required": ["localField", "foreignField"],
                                        "additionalProperties": false,
                                        "properties": {
                                            "class": {
                                                "type": "string"
                                            },
                                            "localField": {
                                                "type": "string"
                                            },
                                            "foreignField": {
                                                "type": "string"
                                            },
                                            "conditions": {
                                                "type": "array",

                                                "items": {
                                                    "type": "object",
                                                    "required": ["field", "value"],
                                                    "additionalProperties": false,
                                                    "properties": {
                                                        "field": {
                                                            "type": "string"
                                                        },
                                                        "value": {
                                                            "type": "string"
                                                        },
                                                        "condition": {
                                                            "type": "string"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "indexes": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "required": ["type", "columns"],
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": ["index", "unique", "fulltext"]
                                },
                                "columns": {
                                    "type": "array"
                                },
                                "size": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
